<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightThemeColorPrimary</item>
        <item name="colorOnPrimary">@color/lightThemeColorOnPrimary</item>
        <item name="colorPrimaryDark">@color/lightThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/lightThemeColorAccent</item>
<!--        <item name="android:colorBackground">@color/background</item>-->
        <item name="android:textColor">@color/lightThemeGeneralTextColor</item>
        <item name="android:colorEdgeEffect">@color/lightThemeButtonBackground</item>

        <item name="colorControlNormal">@color/lightThemeControlColorEnabled</item>



        <item name="preferenceTheme">@style/AppPreferenceTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment">
        <item name="android:layout">@layout/fragment_base_settings</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="StrokeOrderButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginLeft">@dimen/medium_padding</item>
        <item name="android:layout_marginRight">@dimen/medium_padding</item>
        <item name="android:layout_width">@dimen/stroke_order_button_size</item>
        <item name="android:layout_height">@dimen/stroke_order_button_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ModeSwitchButton" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lightThemeColorOnPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorAccent">@color/lightThemeColorOnPrimary</item>
        <item name="android:background">@color/lightThemeColorPrimary</item>
        <item name="android:textColorHint">@color/lightThemeTextColorHintOnPrimary</item>
        <item name="android:editTextColor">@color/lightThemeColorOnPrimary</item>
        <item name="android:queryBackground">@color/lightThemeColorOnPrimary</item>
        <item name="queryBackground">@color/lightThemeColorOnPrimary</item>
        <item name="titleTextColor">@color/lightThemeColorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
